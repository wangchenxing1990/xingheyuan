            <!--<ImageView-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="80dp"-->
            <!--android:background="@drawable/pingzhneg003" />-->
            <!--</LinearLayout>-->
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_yi"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_fifth"
        android:layout_marginTop="10dp"
        android:background="#323232" />

    <RelativeLayout
        android:id="@+id/rl_sixth"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/view_yi">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="是否同意"
            android:textColor="#505050"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView17"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView17"
            android:layout_toRightOf="@+id/textView17"
            android:background="@drawable/huibiankuang"
            android:paddingLeft="12dp"
            android:textColor="#5a5a5a"
            android:text="是" />

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView17"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
            android:textColor="#5a5a5a"
            android:layout_toEndOf="@+id/textView17"
            android:layout_toRightOf="@+id/textView17"
            android:background="@drawable/huibiankuang"
            android:paddingLeft="12dp"
            android:text="否" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@+id/rl_sixth">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="补充说明"
            android:textColor="#505050"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/rl_kuang"
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:background="@drawable/kuang_24"
            android:layout_below="@id/textView18"

            android:layout_marginLeft="20dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/with_btn"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape04"
        android:text="同意"
        android:textColor="#f8f8f8"
        android:textSize="15sp" />

</RelativeLayout>
