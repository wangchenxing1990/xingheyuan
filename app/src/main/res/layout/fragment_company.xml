<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xhy.xhyapp.fragment.CompanyFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="基本信息"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="公司名称"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/rg_company_name"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@drawable/edittext"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="公司地址"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/rg_company_address"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@drawable/edittext"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="法人姓名"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/rg_company_faname"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@drawable/edittext"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="法人身份证号"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/rg_company_fanameId"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@drawable/edittext"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="对公帐号"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/rg_company_accounts"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@drawable/edittext"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="法人手机号"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="  +86  "
                        android:textSize="16dp"
                        android:background="#E2E0E1"
                        android:gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/rg_company_fanamenumber"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:textSize="16dp"
                        android:background="@drawable/edittext"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/zhucezhanghu_08"
                    android:layout_gravity="center_vertical">
                    <EditText
                        android:id="@+id/rg_company_yanzhengnumber"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="32dp"
                        android:textSize="16dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/edittext"
                        android:gravity="center_vertical"
                        android:hint="请输入手机验证码"/>
                    <TextView
                        android:id="@+id/rg_company_yanzheng"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:text="验证"
                        android:textSize="16dp"
                        android:background="#E2E0E1"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="营业执照"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:id="@+id/rg_company_phone1"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/zhucezhanghu_15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="  身份证照片"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/rg_company_phone2"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/zhucezhanghu_15"/>
                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/rg_company_phone3"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/zhucezhanghu_15"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:background="#ffffff">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="  公司信息"
                    android:textSize="16dp"
                    />
                <EditText
                    android:id="@+id/companyxiangqing"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:paddingLeft="5dp"
                    android:gravity="top"
                    android:textSize="16dp"
                    android:background="@drawable/edittextbarr"
                    />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <Button
                    android:id="@+id/rg_company_tijiao1"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:background="@drawable/shape04"
                    android:text="提交资料"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
