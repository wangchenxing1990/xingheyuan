<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#3fc199"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_shop_back"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_collect" />

        <TextView
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的采购订单"
            android:layout_centerInParent="true"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_gravity="center" />

    </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/rl_qiche"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <ImageView
                android:background="@drawable/shizhong"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView10" />
            <TextView
                android:id="@+id/ddmjfkuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#ff5000"
                android:text="等待买家付款"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/imageView10"
                android:layout_toEndOf="@+id/imageView10" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩5时30分自动关闭"
                android:textSize="12sp"
                android:textColor="#ff5000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_alignTop="@+id/imageView10"
                android:layout_toRightOf="@+id/imageView10"
                android:layout_toEndOf="@+id/imageView10" />

        </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"></View>


    <RelativeLayout
        android:id="@+id/rl_weizhi"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/rl_qiche"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/daishouhuoxiangqing_07"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView11" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人：刘大伟"
            android:textSize="15sp"
            android:textColor="#646464"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView11"
            android:layout_toEndOf="@+id/imageView11"
            android:id="@+id/textView33" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18800708888"
            android:textSize="15sp"
            android:textColor="#646464"
            android:layout_alignTop="@+id/textView33"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址：河南省郑州市  郑东新区  东风南路与商鼎路交叉口升龙广场"
            android:textSize="15sp"
            android:textColor="#646464"
            android:layout_alignTop="@+id/imageView11"
            android:layout_toRightOf="@+id/imageView11"
            android:layout_toEndOf="@+id/imageView11" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_weizhi"
        android:background="#efeff4"
        android:layout_width="match_parent"
        android:layout_height="8dp"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tupian"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/rl_weizhi"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="125dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/honey_peach"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView12" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView12"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView12"
            android:layout_toRightOf="@+id/imageView12"
            android:text="【绿色联盟】- 红心火龙果"
            android:textColor="#5a5a5a"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView12"
            android:layout_marginRight="10dp"
            android:text="￥    186"
            android:textColor="#5a5a5a"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="X      30"
            android:textColor="#5a5a5a"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView12"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="合计(不退运费 ￥ 150.00) : 5580"
            android:textColor="#5a5a5a" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#efeff4"
        android:layout_width="match_parent"
        android:layout_height="8dp"></RelativeLayout>

    <TextView
        android:id="@+id/textViewdingdanbianhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="创建时间：2016-08-01 08-26-26"
        android:textColor="#5a5a5a"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:layout_marginLeft="190dp" >

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lvbiankuang"
        android:textColor="#3fc199"
        android:text="取消订单"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:id="@+id/text_quxiaodingdan" />

    <TextView
        android:layout_weight="1"
        android:layout_marginLeft="25dp"
        android:id="@+id/text_zhifu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lvbiankuang"
        android:textColor="#3fc199"
        android:text="    支付     "
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginRight="10dp" />

</LinearLayout>



</LinearLayout>
