<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#3fc199">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dp"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/iv_shop_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_collect" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账户管理"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re001"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="55dp"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/re_first"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="#0d2432"
                android:textSize="18sp" />

            <com.xhy.xhyapp.view.RoundImageView
                android:id="@+id/imageView_touxiang"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="34dp"
                android:background="@drawable/touxiang_huang" />

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView_touxiang"
                android:gravity="center">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:background="@drawable/youjiantouhuise" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/re_first"
            android:layout_marginLeft="10dp"
            android:background="#e6e6e6"></View>

        <RelativeLayout
            android:id="@+id/re_second"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/re_first"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="昵称"
                android:textColor="#0d2432"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView9"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imageView9"
                android:layout_toStartOf="@+id/imageView9"
                android:text="宋小二"
                android:textColor="#0d2432"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/youjiantouhuise" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/re_second"
            android:layout_marginLeft="10dp"
            android:background="#e6e6e6"></View>

        <RelativeLayout
            android:id="@+id/re_third"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/re_second"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="#0d2432"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="15888883333" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/re_third"
            android:background="#efeff4"></View>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/re_fourth"
        android:background="#efeff4"></View>

    <RelativeLayout
        android:id="@+id/re_fourth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/re001"
        android:layout_marginTop="15dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="登录密码"
            android:textColor="#0d2432"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/youjiantouhuise" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/re_fourth"
        android:background="#efeff4"></View>
</RelativeLayout>