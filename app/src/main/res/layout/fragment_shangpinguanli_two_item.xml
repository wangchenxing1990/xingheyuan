<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="94dp"
        android:layout_height="156dp">
        <ImageView
            android:id="@+id/shangpin_twoitem_image"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pitaya1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="9dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="156dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shangpin_twoitem_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:text="【绿色联盟】- 红心火龙果"
            android:textSize="16dp"
            android:textColor="#5a5a5a"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="产品价格"
                android:textColor="#5a5a5a"
                android:textSize="14dp" />
            <LinearLayout
                android:layout_width="129dp"
                android:layout_height="43dp"
                android:background="@drawable/tutuu_03"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fragment_shangpin_two_pjian"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="14dp" />
                <EditText
                    android:id="@+id/fragment_shangpin_two_p"
                    android:layout_width="43dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="#EEEEEE"
                    android:inputType="number"
                    android:textColor="#6e6e6e"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/fragment_shangpin_two_pplus"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="14dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="  元"
                android:textSize="14dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="库存"
                android:textColor="#5a5a5a"
                android:textSize="14dp" />
            <LinearLayout
                android:layout_width="129dp"
                android:layout_height="43dp"
                android:background="@drawable/tutuu_03"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fragment_shangpin_two_tjian"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/fragment_shangpin_two_t"
                    android:layout_width="43dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:inputType="number"
                    android:background="#EEEEEE"
                    android:text="200"
                    android:textColor="#6e6e6e"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/fragment_shangpin_two_tplus"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="14dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="  吨"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/fragment_shangpin_two_item_wuliufei"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="物流费用"
                android:textColor="#a0a0a0"
                android:textSize="14dp" />
            <TextView
                android:layout_width="8dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="(物流费用根据距离自动生成不可编辑)"
                android:textSize="10dp"
                android:textColor="#a0a0a0"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
