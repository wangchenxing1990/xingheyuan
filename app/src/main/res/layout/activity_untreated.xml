<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myactivity.MyPurchaseActivity">

    <RelativeLayout
        android:id="@+id/re_first"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#3fc199">

        <LinearLayout
            android:id="@+id/ll_back001"
            android:layout_width="40dp"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/iv_shop_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_collect" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的采购订单"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_first"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/re_first">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/my_caigou_all"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="全部"
                android:textColor="#3d4245"
                android:textSize="18sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/my_zcaigou_x1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e6e6e6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_caigou_dpay"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="待支付"
                android:gravity="center"
                android:textColor="#3d4245"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/my_zcaigou_x2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e6e6e6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_caigou_dreceive"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="待发货"
                android:textColor="#3d4245"
                android:textSize="18sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/my_zcaigou_x3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e6e6e6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_caigou_dtake"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="待收货"
                android:textColor="#3d4245"
                android:textSize="18sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/my_zcaigou_x4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e6e6e6"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/my_caigao_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_first"/>
</RelativeLayout>
