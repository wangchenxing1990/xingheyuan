<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_password_popubwindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativelayout_password"
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:background="@drawable/shape03">

        <RelativeLayout
            android:id="@+id/loginpassword_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/textView_oldpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="61dp"
                android:layout_marginStart="61dp"
                android:text="旧密码"
                android:textColor="#0d2432"
                android:textSize="15sp" />

            <View
                android:id="@+id/view3"
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:layout_marginLeft="170dp"
                android:background="#320320"></View>

            <TextView
                android:id="@+id/txt_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView_oldpassword"
                android:layout_marginEnd="52dp"
                android:layout_marginRight="52dp"
                android:text="手机号" />
        </RelativeLayout>

        <View
            android:id="@+id/view_login_first"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/loginpassword_rl"
            android:background="#320320" />

        <RelativeLayout
            android:id="@+id/password_relative"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/loginpassword_rl">

            <RelativeLayout
                android:id="@+id/password_rl"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="29dp"
                    android:text="旧密码:"
                    android:textColor="#0d2432"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView30"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView30"
                    android:layout_toRightOf="@+id/textView30"
                    android:background="@null"
                    android:hint="请输入原来密码"
                    android:textColor="#0a0a0a"
                    android:textSize="13dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/password_rl"
                android:background="#320320"></View>

            <RelativeLayout
                android:id="@+id/xinpassword_rl"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/password_rl">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="29dp"
                    android:text="新密码:"
                    android:textColor="#0d2432"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView31"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView31"
                    android:layout_toRightOf="@+id/textView31"
                    android:background="@null"
                    android:hint="请输入新密码"
                    android:textColor="#0a0a0a"
                    android:textSize="15sp" />
            </RelativeLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/password_relative"
            android:background="#320320"></View>

        <RelativeLayout
            android:id="@+id/rl_loginpassword_phone"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/view_login_first"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_login_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="29dp"
                    android:text="手机号:"
                    android:textColor="#0d2432"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView29"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView29"
                    android:layout_toRightOf="@+id/textView29"
                    android:text="15500703210"
                    android:textColor="#a0a0a0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rl_login_phone"
                android:background="#320320"></View>

            <RelativeLayout
                android:id="@+id/rl_login_yanzheng"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rl_login_phone">

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="29dp"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/editText5"
                    android:layout_marginRight="27dp"
                    android:text="获取验证码"
                    android:textColor="#0d2432"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rl_login_yanzheng"
                android:background="#320320"></View>

            <RelativeLayout
                android:id="@+id/rl_login_newpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rl_login_yanzheng">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="29dp"
                    android:text="新密码:"
                    android:textColor="#0d2432"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView32"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView32"
                    android:layout_toRightOf="@+id/textView32"
                    android:background="@null"
                    android:hint="输入更改密码"
                    android:textSize="15sp" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_loginpassword_phone"
            android:background="#320320"></View>

        <Button
            android:id="@+id/button_loginpassword_cancel"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/lvbiankuang"
            android:text="取消"
            android:textColor="#3fc199"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_loginpassword_sure"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/button_loginpassword_cancel"
            android:layout_marginRight="30dp"
            android:background="@drawable/lvbiankuang"
            android:text="确定"
            android:textColor="#3fc199"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativelayout_password"></RelativeLayout>
</RelativeLayout>