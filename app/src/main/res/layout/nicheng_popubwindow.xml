<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/re_nicheng"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/re_nicheng002"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="136dp"
        android:background="@drawable/shape03">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="昵称:"
            android:textColor="#0d2432"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_shuru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="15sp"
            android:background="@null"
            android:hint="请输入修改的昵称" />

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#969696"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/edit_shuru"></View>

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/textView25"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView25"
            android:layout_marginBottom="20dp"
            android:background="@drawable/lvbiankuang"
            android:text="取消"
            android:textColor="#3fc199"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_sure"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/button_cancel"
            android:layout_marginRight="20dp"
            android:background="@drawable/lvbiankuang"
            android:text="确定"
            android:textColor="#3fc199"
            android:textSize="15sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re_nicheng002"></RelativeLayout>
</RelativeLayout>