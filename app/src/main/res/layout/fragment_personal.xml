<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xhy.xhyapp.fragment.CompanyFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="基本信息"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="个人姓名"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/rg_person_personname"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@drawable/edittext"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="居住地址"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/rg_person_personaddress"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@drawable/edittext"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="工作单位"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/rg_person_personwork"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@drawable/edittext"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="身份证号"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/rg_person_personId"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:background="@drawable/edittext"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="手机号"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/zhucezhanghu_08"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" +86 "
                        android:background="#E2E0E1"
                        android:gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/rg_person_personnumber"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:textSize="16dp"
                        android:background="@drawable/edittext"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/zhucezhanghu_08"
                    android:layout_gravity="center_vertical">
                    <EditText
                        android:id="@+id/rg_person_yanzhennumber"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="32dp"
                        android:textSize="16dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/edittext"
                        android:gravity="center_vertical"
                        android:hint="请输入手机验证码"/>
                    <TextView
                        android:id="@+id/rg_person_yanzheng"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:text="  验证  "
                        android:textSize="16dp"
                        android:background="#E2E0E1"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="身份证照片"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/rg_person_phone1"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/zhucezhanghu_15"/>
                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/rg_person_phone2"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/zhucezhanghu_15"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/rg_person_tijiao1"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:background="@drawable/shape04"
                    android:text="提交资料"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
