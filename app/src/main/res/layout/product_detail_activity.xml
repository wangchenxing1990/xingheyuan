<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/direct_propure_pager"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/iv_direct_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="9dp"
                    android:src="@mipmap/direct_back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_direct_fruit_detail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="9dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3dp"
                android:paddingRight="9dp"
                android:text="绿色联盟—红心火龙果（一个运费到付）红心火龙果能够很好地预防便秘的现象，火龙果少有病虫害"
                android:textColor="#3c3c3c"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="9dp">

                    <TextView
                        android:id="@+id/tv_direct_price_high"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="￥12"
                        android:textColor="#fd0000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_direct_weght_low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="10—20吨起批"
                        android:textColor="#9f9e9e"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="9dp">

                    <TextView
                        android:id="@+id/tv_direct_price_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="￥11"
                        android:textColor="#fd0000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_direct_weght_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="20—30吨起批"
                        android:textColor="#9f9e9e"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="9dp">

                    <TextView
                        android:id="@+id/tv_direct_price_low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="￥10"
                        android:textColor="#fd0000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_direct_weght_high"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="30—40吨起批"
                        android:textColor="#9f9e9e"
                        android:textSize="15dp" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_direct_express_price"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="9dp"
                    android:gravity="center_vertical"
                    android:text="快递：0.00"
                    android:textColor="#9f9e9e"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_direct_buy_weght"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45dp"
                    android:gravity="center_vertical"
                    android:text="成交    45吨"
                    android:textColor="#9f9e9e"
                    android:textSize="15dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="9dp"
                    android:src="@drawable/direct_checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="有机"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:src="@drawable/direct_checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="买家保障"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:src="@drawable/direct_checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="24小时发货"
                    android:textSize="15dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_direct_image_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="图片详情"
                    android:textColor="#3fc199"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_direct_product_parameter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="产品参数"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="#cccccc" />

            <FrameLayout
                android:id="@+id/fr_image_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fr_product_parameter"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:visibility="gone">

            </FrameLayout>

        </LinearLayout>
    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_direct_pro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="直接采购"
            android:textColor="#505050"
            android:textSize="18dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/tv_add_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="加入收藏"

            android:textColor="#505050"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#d33a04"
            android:gravity="center"
            android:text="联系我们"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>
