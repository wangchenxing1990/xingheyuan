<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myactivity.ZKKMActivity"
    android:orientation="vertical"
    android:id="@+id/shezhi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="#3fc199">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dp"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/iv_shop_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_collect" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dizhiguanli"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_marginLeft="18dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shezhi_dizhi" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址管理"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginLeft="190dp"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:background="@drawable/jiantou_xiangyou"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shezhi_cuxiantiao"/>

    <LinearLayout
        android:id="@+id/qingchuhuancun"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_marginLeft="18dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shezhi_qingchuhuancun"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginLeft="190dp"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:background="@drawable/jiantou_xiangyou"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shezhi_cuxiantiao"/>

    <RelativeLayout
        android:id="@+id/jianchagengxin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/jiance"
            android:layout_marginLeft="18dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shezhi_jianchagengxin"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/jiance"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查更新"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/jiance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/banbenhao"
            android:textSize="18sp"
            android:layout_marginLeft="180dp"
            />



        <ImageView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/jiance"
            android:layout_marginLeft="285dp"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:background="@drawable/jiantou_xiangyou"/>

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shezhi_cuxiantiao"/>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tuichudenglu"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/shezhi_tuichudenglu"
            android:text="退出登录"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
