<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wait_shipments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="待发货"
            android:layout_marginTop="35dp"
            android:textSize="13dp"
            android:textColor="#5a5a5a"/>
        <TextView
            android:id="@+id/tv_had_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_wait_shipments"
            android:text="已发出"
            android:layout_marginTop="50dp"
            android:textSize="13dp"
            android:textColor="#5a5a5a"/>
        <TextView
            android:id="@+id/tv_return_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_had_send"
            android:text="退货处理"
            android:layout_marginTop="50dp"
            android:textSize="13dp"
            android:textColor="#5a5a5a"/>

        <ImageView
            android:id="@+id/iv_click_home"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/click_home"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentBottom="true"

            />
    </RelativeLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/shangpin_03"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/lv_wait_shipments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
        <ListView
            android:id="@+id/lv_had_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></ListView>
        <ListView
            android:id="@+id/lv_return_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></ListView>
    </LinearLayout>

</LinearLayout>
