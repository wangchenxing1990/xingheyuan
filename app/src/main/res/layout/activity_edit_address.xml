<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#3fc199">

        <ImageView
            android:id="@+id/iv_my_back"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_marginLeft="9dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_collect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修该地址"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lv_my_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:text="姓名"
                android:textColor="#3d4245"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="刘罗锅"
                android:background="@null"
                android:textColor="#3d4245"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:text="电话"
                android:textColor="#3d4245"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="13500701230"
                android:textColor="#3d4245"
                android:background="@null"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:text="所在省"
                android:textColor="#3d4245"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_sheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="河南省"
                android:background="@null"
                android:textColor="#3d4245"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:text="所在市"
                android:textColor="#3d4245"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="郑州市"
                android:background="@null"
                android:textColor="#3d4245"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:text="所在街道"
                android:textColor="#3d4245"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="东风南路与商鼎路交叉口"
                android:background="@null"
                android:textColor="#3d4245"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:text="详细地址"
                android:textColor="#3d4245"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_detail_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="9dp"
                android:background="@null"
                android:text="河南省郑州市东风南路与商鼎路交叉口升龙广场1号楼B座2609"
                android:textColor="#3d4245"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_sure"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/shape04"
        android:gravity="center"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>
