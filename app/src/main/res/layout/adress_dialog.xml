<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/actionsheet_single_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:id="@+id/txt_confirm"
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="4dp"
        android:text="чбо  шод"
        android:layout_marginRight="10dp"
        android:textColor="#00ca9b"
        android:textSize="16dp"/>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#cccccc"
    />


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            >

            <com.xhy.xhyapp.myactivity.CustomNumberPicker
                    android:layout_marginLeft="20dp"
                    android:id="@+id/mypicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            </com.xhy.xhyapp.myactivity.CustomNumberPicker>

            <com.xhy.xhyapp.myactivity.CustomNumberPicker

                android:layout_marginLeft="130dp"
                android:id="@+id/propicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.xhy.xhyapp.myactivity.CustomNumberPicker>

            <com.xhy.xhyapp.myactivity.CustomNumberPicker
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:id="@+id/townpicker"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

            </com.xhy.xhyapp.myactivity.CustomNumberPicker>
        </RelativeLayout>

        </LinearLayout>

</LinearLayout>
