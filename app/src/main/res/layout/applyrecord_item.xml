<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/huankuan"
        android:layout_width="368dp"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="110dp"
            android:background="@drawable/shenqingjilu1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="贷款总额"
                android:textColor="#666666"
                android:textSize="13dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="66.5dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/huankuanzonge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="10000"
                        android:textColor="#c52a2a"
                        android:textSize="18dp" />

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/huankuanzongexiaoshu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="52.5dp"
                    android:layout_weight="1"
                    android:text=".00"
                    android:textColor="#c52a2a"
                    android:textSize="12dp" />


                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="66.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shenqingjilu4">

                    <TextView
                        android:id="@+id/huankuanjindutiao"
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:background="@drawable/text_view" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/jiekuanriqi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="66.5dp"
                    android:layout_weight="1"
                    android:text="100"
                    android:textColor="#808080"
                    android:textSize="10dp" />


                <TextView
                    android:id="@+id/huankuanbaifenbi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52.5dp"
                    android:layout_marginRight="66.5dp"
                    android:layout_weight="1"
                    android:text="100"
                    android:textColor="#808080"
                    android:textSize="10dp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="30dp"
            android:background="@drawable/shenqingjilu2"
            android:gravity="center">

            <TextView
                android:id="@+id/huankuandianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="立即还款"
                android:textColor="#3fc199"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
