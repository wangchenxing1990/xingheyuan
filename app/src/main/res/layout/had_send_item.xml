<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="3dp"
   >

        <ImageView
            android:id="@+id/iv_had_send_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/cherry"/>
            <TextView
                android:id="@+id/tv_had_send_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/iv_had_send_item"
                android:text="【绿色联盟】-红心火龙果"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_had_send_title"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/iv_had_send_item"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买数量"
                    android:textSize="12sp"
                    android:textColor="#5a5a5a"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="10吨"
                    android:textSize="12sp"
                    android:textColor="#5a5a5a"
                    />
            </LinearLayout>

        <TextView
            android:id="@+id/tv_look_logistics_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看物流"
            android:gravity="center"
            android:background="@drawable/huibiankuang"
            android:textSize="12dp"
            android:layout_alignBottom="@+id/iv_had_send_item"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>

</RelativeLayout>
