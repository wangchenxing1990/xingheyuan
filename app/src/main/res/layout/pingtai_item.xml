<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/pingtaitongzhi_03"
        android:id="@+id/relativeLayout7">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/xiaoxi_07" />

    </RelativeLayout>

    <TextView

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textColor="#051b28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品活动"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/relativeLayout7"
        android:layout_toEndOf="@+id/relativeLayout7"
        android:id="@+id/textView_notice" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="大批帝王蟹降价来袭 你 准备好了吗？"
        android:textColor="#999999"
        android:layout_below="@+id/textView_notice"
        android:layout_toRightOf="@+id/relativeLayout7"
        android:layout_toEndOf="@+id/relativeLayout7" />
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginTop="78dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#efeff4"></View>
</RelativeLayout>