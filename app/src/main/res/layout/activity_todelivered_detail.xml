<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#3fc199"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_shop_back"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_collect" />

    <TextView
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的采购订单"
        android:layout_centerInParent="true"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_gravity="center" />

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#320320"
        android:layout_below="@+id/rl_qiche"></View>

    <RelativeLayout
        android:id="@+id/rl_fahuo"
        android:layout_width="match_parent"
        android:layout_height="40dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="待发货"
        android:textColor="#ff5000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#320320"></View>


    <RelativeLayout
        android:id="@+id/rl_weizhi"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/rl_qiche"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/daishouhuoxiangqing_07"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView11" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人：刘大伟"
            android:textSize="15sp"
            android:textColor="#646464"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView11"
            android:layout_toEndOf="@+id/imageView11"
            android:id="@+id/textView33" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18800708888"
            android:textSize="15sp"
            android:textColor="#646464"
            android:layout_alignTop="@+id/textView33"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址：河南省郑州市  郑东新区  东风南路与商鼎路交叉口升龙广场"
            android:textSize="15sp"
            android:textColor="#646464"
            android:layout_alignTop="@+id/imageView11"
            android:layout_toRightOf="@+id/imageView11"
            android:layout_toEndOf="@+id/imageView11" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_weizhi"
        android:background="#efeff4"
        android:layout_width="match_parent"
        android:layout_height="8dp"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tupian"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/rl_weizhi"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="125dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/honey_peach"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView12" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView12"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView12"
            android:layout_toRightOf="@+id/imageView12"
            android:text="【绿色联盟】- 红心火龙果"
            android:textColor="#5a5a5a"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView12"
            android:layout_marginRight="10dp"
            android:text="￥    186"
            android:textColor="#5a5a5a"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="X      30"
            android:textColor="#5a5a5a"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView12"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="合计(不退运费 ￥ 150.00) : 5580"
            android:textColor="#5a5a5a" />
    </RelativeLayout>
    <View
        android:layout_below="@+id/rl_tupian"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#efeff4"></View>

    <TextView
        android:id="@+id/textViewdingdanbianhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"


        android:text="订单编号：210098765421"
        android:textColor="#5a5a5a"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textViewfukuanshijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"


        android:text="付款时间：2016-08-01  8:26:26"
        android:textColor="#5a5a5a"
        android:textSize="13sp" />





</LinearLayout>
