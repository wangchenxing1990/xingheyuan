<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dianpu_shangpinguanli"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#3fc199"
        >
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dp"
            android:layout_height="44dp"
            >
            <ImageView
                android:id="@+id/iv_shop_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:src="@drawable/back_collect"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/iv_shop_quanxuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#3fc199"
            android:text="全选"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_com_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品管理"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#5a5a5a"/>


        <TextView
            android:id="@+id/tv_order_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单管理"
            android:textSize="15dp"
            android:textColor="#5a5a5a"
            />
        <ImageView
            android:id="@+id/tv_order_control_num"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/wowoo_03"
            android:layout_marginTop="-6dp"
            />


        <TextView
            android:id="@+id/tv_shop_control"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="店铺管理"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#5a5a5a"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#efeff4"></View>

    <FrameLayout
        android:id="@+id/frame_control"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>
</LinearLayout>
