<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <LinearLayout
                    android:id="@+id/ll_direct_procure"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/iv_direct_back"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/direct_back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_direct_fruit_detail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3dp"
                android:text="绿色联盟—红心火龙果（一个运费到付）红心火龙果能够很好地预防便秘的现象，火龙果少有病虫害"
                android:textColor="#3c3c3c"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:paddingLeft="9dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_direct_price_high"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="￥12"
                        android:textColor="#fd0000"
                        android:textSize="10dp"/>

                    <TextView
                        android:layout_marginTop="4dp"
                        android:id="@+id/tv_direct_weght_low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10—20吨起批"
                        android:textSize="12dp"
                        android:textColor="#9f9e9e"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:paddingLeft="9dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_direct_price_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="￥11"
                        android:textColor="#fd0000"
                        android:textSize="10dp"/>

                    <TextView
                        android:layout_marginTop="4dp"
                        android:id="@+id/tv_direct_weght_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20—30吨起批"
                        android:textSize="12dp"
                        android:textColor="#9f9e9e"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:paddingLeft="9dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_direct_price_low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="￥10"
                        android:textColor="#fd0000"
                        android:textSize="10dp"/>

                    <TextView
                        android:layout_marginTop="4dp"
                        android:id="@+id/tv_direct_weght_high"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30—40吨起批"
                        android:textSize="12dp"
                        android:textColor="#9f9e9e"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_direct_express_price"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="快递：0.00"
                    android:textSize="11dp"
                    android:layout_marginLeft="9dp"
                    android:textColor="#9f9e9e"/>

                <TextView
                    android:id="@+id/tv_direct_buy_weght"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="成交    45吨"
                    android:textSize="11dp"
                    android:layout_marginRight="45dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#9f9e9e"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/direct_checked"
                    android:paddingLeft="9dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有机"
                    android:textSize="13dp"
                    android:paddingLeft="5dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/direct_checked"
                    android:paddingLeft="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买家保障"
                    android:textSize="13dp"
                    android:paddingLeft="5dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/direct_checked"
                    android:paddingLeft="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24小时发货"
                    android:textSize="13dp"
                    android:paddingLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_direct_image_detail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#3fc199"
                    android:text="图片详情"/>

                <TextView
                    android:id="@+id/tv_direct_product_parameter"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="图片详情"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fr_direct_image_parameter"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="坚持是最美好的事情"
                    />
            </FrameLayout>>

            <FrameLayout
                android:id="@+id/fr_direct_image_parameter1"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="努力就会有希望"
                    />
            </FrameLayout>>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"

        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/tv_direct_pro"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#505050"
            android:layout_height="match_parent"
            android:text="直接采购"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cccccc"/>
        <TextView
            android:id="@+id/tv_add_collect"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#505050"
            android:layout_height="match_parent"
            android:text="加入收藏"/>
        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="#d33a04"
            android:text="联系我们"/>
    </LinearLayout>

</LinearLayout>
