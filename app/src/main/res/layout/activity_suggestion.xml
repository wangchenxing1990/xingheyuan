<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#3fc199">

        <RelativeLayout
            android:id="@+id/rl_suggestion_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:layout_marginLeft="9dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back_collect" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="我遇到的问题:"
        android:gravity="center_vertical"
        android:paddingLeft="9dp"
        android:textSize="12dp"
        android:textColor="#9f9f9f"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:text="为了更好的解决您反馈的问题,请尽量在出现问题的网络环境下进行反馈:"
        android:textSize="15dp"
        android:textColor="#61676b"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_platform"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:text="平台"
            android:textSize="14dp"
            android:textColor="#1e2439"
            android:background="@drawable/huibiankuang"/>

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/huibiankuang"
            android:text="服务"
            android:textSize="14dp"
            android:textColor="#1e2439"/>

        <TextView
            android:id="@+id/tv_goods"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/huibiankuang"
            android:text="商品"
            android:textSize="14dp"
            android:textColor="#1e2439"/>

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/huibiankuang"
            android:text="其他"
            android:textSize="14dp"
            android:textColor="#1e2439"/>
    </LinearLayout>

    <!--<TextView-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="请详细写下您的建议和感想吧:"-->
        <!--android:layout_marginLeft="9dp"-->
        <!--android:textSize="14dp"-->
        <!--android:textColor="#1e2439"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/et_input_suggest"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="请详细写下您的建议和感想吧:"
            android:textSize="15dp"
            android:gravity="top"
            android:background="@null"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit_suggest"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:textColor="#ffffff"
        android:background="@drawable/shape04"
        android:textSize="18dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="提交反馈"/>

</LinearLayout>
