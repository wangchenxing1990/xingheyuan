<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xhy.xhyapp.myactivity.ShippingAddressManagementActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#3fc199">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dp"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/iv_shop_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_collect" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="管理收货地址"
            android:textColor="#f8f8f8"
            android:textSize="18dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/addaddress_btn"
        android:divider="#cccccc"
        android:dividerHeight="5dp"
        android:layout_marginTop="45dp">

    </ListView>

    <Button
        android:id="@+id/addaddress_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#3fc199"
        android:text="添加新地址"
        android:textSize="18sp"
        android:textColor="#f8f8f8" />
</RelativeLayout>
