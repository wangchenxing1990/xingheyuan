<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_send"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

   <RelativeLayout
       android:id="@+id/rl_title1"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:background="#3fc199">
       <com.xhy.xhyapp.view.RoundImageView
           android:layout_width="65dp"
           android:layout_height="65dp"
           android:layout_centerInParent="true"
           android:background="@drawable/yuan_03"
           android:id="@+id/imageView" />
       <TextView
           android:id="@+id/shop_name_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="风格有点甜"
           android:textSize="15dp"
           android:layout_centerInParent="true"
           android:layout_marginTop="8dp"
           android:layout_below="@+id/imageView"
           />
   </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_three_titless"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_title1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_com_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品管理"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#5a5a5a"/>


            <TextView
                android:id="@+id/tv_order_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单管理"
                android:textSize="15dp"
                android:textColor="#5a5a5a"
                 />
            <ImageView
                android:id="@+id/tv_order_control_num"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/wowoo_03"
                android:layout_marginTop="-6dp"
                 />


        <TextView
            android:id="@+id/tv_shop_control"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="店铺管理"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#5a5a5a"/>

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_below="@+id/ll_three_titless"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#cccccc"/>
    
    <TextView
        android:id="@+id/tv_wait_order"
        android:layout_below="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未处理订单"
        android:textSize="17dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="9dp"
        />

    <ListView
        android:layout_below="@+id/tv_wait_order"
        android:id="@+id/iv_untreate_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/click_home_main"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/click_home"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="13dp"/>

</RelativeLayout>
